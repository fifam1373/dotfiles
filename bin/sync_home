#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
set globopt

# findout we have ~/prog or ~/proj
dotfiles_pattern="$HOME/pro[jg]/dotfiles/"
while read -r file; do
    dotfiles_path="$file"
done < <(compgen -G "$dotfiles_pattern" || true)

# copy content of dotfiles to home folder
rsync --exclude ".git/" \
    --exclude "install-first.sh" \
    --exclude "README.md" \
    --exclude "docs" \
    --exclude "install" \
    --exclude "LICENSE" \
    --exclude ".gitignore" \
    -ah --no-perms \
    "$dotfiles_path" "$HOME";

